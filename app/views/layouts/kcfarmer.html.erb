<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <title>KC Farmer</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <meta name="description" content="">
  </head>

  <body>
<!--==========================
    Header
  ============================-->
    <div class="container">
      <nav class="navbar navbar-default navbar-stick-top">
        <div class="container">
          <div class="navbar-header">
            <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
              <span class="sr-only">Toggle navigation</span>
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
            </button>
            <a class="navbar-brand urlogo" href="#">
               <%= link_to root_path do %>
                    <%= image_tag  "logo.png", alt:'', class:'logo' %>
               <% end %>
          </div>
          <div id="navbar" class="collapse navbar-collapse">
            <ul class="nav navbar-nav">
              <li><a href="#">
                  <% if member_signed_in? %>
                     <span class="userRole">Welcome, <%=current_member.email %> </span>
                  <% end %>
                </a></li>
            </ul>
            <ul class="nav navbar-nav navbar-right">
                <li><% if member_signed_in? %>
               &nbsp; <%= link_to  " Logout", destroy_member_session_path, method: :delete,class:'pull-right',id:'logout' %>
              <% else%>
              <p>Unauthorized access</p>
              <% end %></li>
              </ul>
          </div><!--/.nav-collapse -->
        </div>
      </nav>
    </div>
      
      <!-- End of navigation -->
      <div class="container">
        <h1><span class="glyphicon glyphicon-cog"></span> KC FARMER<small> DASHBOARD</small></h1>
        <div class="row">
        
          <div class="col-sm-3">
            
          </div>
          <div class="col-sm-9">
             <% if flash[:notice]%>
                <div class="alert alert-success"><%= flash[:notice]%></div>
              <% end %>
              <% if flash[:alert]%>
                <div class="alert alert-danger"><%= flash[:alert] %></div>
              <% end %>
            
          </div>
</div>

    <div class="container">

      <%= yield %>
      

    </div><!-- /.container -->
